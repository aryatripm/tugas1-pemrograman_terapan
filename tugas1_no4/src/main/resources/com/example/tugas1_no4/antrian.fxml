<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tugas1_no4.AntrianController">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Nomor Antrian :">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <Label text="0" fx:id="now">
                            <font>
                                <Font size="72.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER" prefHeight="380.0" prefWidth="111.0" spacing="10.0" HBox.hgrow="SOMETIMES">
                    <children>
                        <Label text="Nomor Selanjutnya :" />
                        <Label text="0" fx:id="next">
                            <font>
                                <Font size="36.0" />
                            </font>
                        </Label>
                        <Separator prefWidth="200.0" />
                        <Label text="Custom Number" />
                        <TextArea prefHeight="5.0" prefWidth="182.0" VBox.vgrow="NEVER"  fx:id="customValue"/>
                        <Button mnemonicParsing="false" text="Change"  onAction="#customButton"/>
                        <Separator prefWidth="200.0" />
                        <ButtonBar prefHeight="40.0" prefWidth="200.0">
                            <buttons>
                                <Button mnemonicParsing="false" text="Previous" onAction="#prev"/>
                                <Button mnemonicParsing="false" text="Next" onAction="#next"/>
                            </buttons>
                        </ButtonBar>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>
